<div id="records">
  <%= form_for [:admin, @inquiry] do |f| %>
    <%= render :partial => '/shared/admin/error_messages',
               :locals => {
                 :object => @inquiry,
                 :include_object_name => true
               } %>
    <%= hidden_field_tag :isclosed, true %>
    <%= hidden_field_tag :isapproved, true %>
    <div class="field">
      <%= f.required_label :name, :class => 'placeholder-fallback' %>
      <%= f.text_field :name, :class => 'text', :required => 'required', :placeholder => t('name', :scope => 'activerecord.attributes.inquiry') %>
    </div>
    <div class="field">
      <%= f.required_label :email, :class => 'placeholder-fallback' %>
      <%= f.email_field :email, :class => 'text email', :required => 'required', :placeholder => t('email', :scope => 'activerecord.attributes.inquiry') %>
    </div>
    <div class="field">
    	<%= f.required_label :inquiry_category_id, :class => 'placeholder-fallback' %>
      <%= f.collection_select :inquiry_category_id, InquiryCategory.all, :id, :name %> 
    </div>
    <div class='field message_field'>
      <%= f.required_label :message, :class => 'placeholder-fallback' %>
      <%= f.text_area :message, :rows => 8, :required => 'required', :placeholder => t('message', :scope => 'activerecord.attributes.inquiry') %>
    </div>
    <div class='field'>
      <%= f.label :created_at, :class => 'placeholder-fallback' %>
      <%= date_select :inquiry, :created_at %>
    </div>
    <div class="field">
      <%= f.required_label :recipient, :class => 'placeholder-fallback' %>
      <%= f.text_field :recipient, :class => 'text', :required => 'required', :placeholder => t('recipient', :scope => 'activerecord.attributes.inquiry') %>
    </div>
    <div class='field message_field'>
      <%= f.required_label :answer, :class => 'placeholder-fallback' %>
      <%= f.text_area :answer, :rows => 8, :required => 'required', :placeholder => t('answer', :scope => 'activerecord.attributes.inquiry') %>
    </div>
    <div class='field'>
      <%= f.label :updated_at, :class => 'placeholder-fallback' %>
      <%= date_select :inquiry, :updated_at %>
    </div>
    <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => true
              } %>
  <% end %>
</div>
