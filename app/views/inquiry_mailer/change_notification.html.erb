<%=raw t('.greeting') %>,

<%=raw t('.your_inquiry_changed') %>

<%=raw t('.inquiry_starts') %>

<%=raw t('.from') %>: <%= @inquiry.name %>
<%=raw t('.email') %>: <%= @inquiry.email %>
<%=raw t('.message') %>:
<%=simple_format strip_tags(@inquiry.message) %>
<%=raw t('.status') %>: <%= @inquiry.status %>
<% if @inquiry.recipient and not @inquiry.recipient.empty? %>
<%=raw t('.recipient') %>: <%= @inquiry.recipient %>
<% end %>
<% if @inquiry.answer and not @inquiry.answer.empty? %>
<%=raw t('.answer') %>:
<%=simple_format strip_tags(@inquiry.answer) %>
<% end %>

<%=raw t('.inquiry_ends') %>

<%=raw t('.closing_line') %>,
<%=raw RefinerySetting[:site_name] %>

<%=raw t('.ps') %>
